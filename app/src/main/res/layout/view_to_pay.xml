<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical" >
       
    <LinearLayout
	    android:id="@+id/pay_we_chat_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="15dp"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	
	    <ImageView
	        style="@style/img_normal_layout"
	        android:layout_marginLeft="15dp"
			android:layout_marginStart="15dp"
	        android:scaleType="centerCrop"
			android:contentDescription="@string/app_name"/>
	
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
			android:layout_marginStart="25dp"
	        android:layout_weight="1.0"
	        android:text="@string/pay_we_chat_pay"
	        android:textColor="@color/black"
	        style="@style/text_font_size_s" />
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="10dp"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/iv_1"
	            style="@style/img_ss_layout"
	            android:scaleType="fitXY"
				android:contentDescription="@string/app_name"/>
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/pay_ali_pay_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="15dp"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	
	    <ImageView
	        style="@style/img_normal_layout"
	        android:layout_marginLeft="15dp"
			android:layout_marginStart="15dp"
	        android:scaleType="centerCrop"
			android:contentDescription="@string/app_name"/>
	
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
			android:layout_marginStart="25dp"
	        android:layout_weight="1.0"
	        android:text="@string/pay_ali_pay"
	        android:textColor="@color/black"
	        style="@style/text_font_size_s" />
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="10dp"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/iv_2"
	            style="@style/img_ss_layout"
	            android:scaleType="fitXY"
				android:contentDescription="@string/app_name"/>
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/pay_wallet_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="15dp"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >
	
	    <ImageView
	        style="@style/img_normal_layout"
	        android:layout_marginLeft="15dp"
			android:layout_marginStart="15dp"
	        android:scaleType="centerCrop"
			android:contentDescription="@string/app_name"/>
	
	    <TextView
	        android:id="@+id/tv_wallet"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
			android:layout_marginStart="255dp"
	        android:layout_weight="1.0"
	        android:text="@string/pay_money_pay"
	        android:textColor="@color/black"
	        style="@style/text_font_size_s" />
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="10dp"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/iv_3"
	            style="@style/img_ss_layout"
	            android:scaleType="fitXY"
				android:contentDescription="@string/app_name"/>
	    </LinearLayout>
	</LinearLayout>
    
</LinearLayout>