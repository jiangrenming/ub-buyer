<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <include layout="@layout/commom_title_bar"></include>-->
    <com.ninetop.common.view.HeadView
        android:id="@+id/hv_title"
        style="@style/title_height"
        android:layout_width="match_parent"/>

        <EditText
            android:id="@+id/et_modify_nickname"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:inputType=""
            />

        <Button
            android:id="@+id/button"
            style="@style/text_font_size_sl"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="15dp"
            android:background="@color/text_red"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/modify_nickname_save"
            android:textColor="@color/white" />

</LinearLayout>