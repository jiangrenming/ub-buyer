<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_category_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/iv_category_gridview"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="false"
            android:focusable="false"
            android:background="@mipmap/img_defult"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:id="@+id/tv_category_gridview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="饼干糕点"
            android:singleLine="true"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/gray_light3"
            android:layout_gravity="center_horizontal"
            style="@style/text_font_size_ss"
            />

    </LinearLayout>


</LinearLayout>