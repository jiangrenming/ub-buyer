<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/category_select"
        android:text="提交"
        style="@style/text_font_size_s"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <youbao.shopping.ninetop.common.view.HeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head_view"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:paddingLeft="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流方式"
                    android:layout_marginLeft="11dip"
                    android:textColor="@color/text_black"
                    style="@style/text_font_size_s"
                    />

                <EditText
                    android:id="@+id/et_exit_money_reason"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请填写物流公司"
                    android:background="@null"
                    android:textColorHint="@color/gray_light4"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="15dip"
                    style="@style/text_font_size_ss"
                    />

                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="10dip"
                    android:layout_height="6dip"
                    android:background="@mipmap/arrow_down_gray"
                    android:layout_marginRight="10dip"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流单号"
                    android:layout_marginLeft="11dip"
                    android:textColor="@color/text_black"
                    style="@style/text_font_size_s"
                    />
                <EditText
                    android:id="@+id/et_logistics_number"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请输入物流单号"
                    android:textColorHint="@color/gray_light4"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="15dip"
                    style="@style/text_font_size_ss"
                    android:background="@null"
                    />

                <ImageView
                    android:id="@+id/iv_logistics_down"
                    android:layout_width="10dip"
                    android:layout_height="6dip"
                    android:background="@mipmap/arrow_down_gray"
                    android:layout_marginRight="10dip"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>