    <!--android:id="@+id/listview"-->
    <!--android:layout_below="@+id/view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:scrollbars="none"-->
    <!--&gt;</ListView>-->
</RelativeLayout>