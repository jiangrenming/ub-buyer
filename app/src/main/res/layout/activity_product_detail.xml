<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="end"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#00FFFFFF"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:id="@+id/ll_product_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/ub_shopping_shopping_detail_shopping"
                    android:textColor="@color/text_red"
                    style="@style/text_font_size_l"
                    />
                <View
                    android:id="@+id/v_line_info"
                    android:layout_width="33dp"
                    android:layout_height="3dp"
                    android:background="@color/text_red"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/ub_shopping_shopping_detail_detail"
                    android:textColor="@color/text_gray"
                    style="@style/text_font_size_m"
                    />
                <View
                    android:id="@+id/v_line_detail"
                    android:layout_width="33dp"
                    android:layout_height="3dp"
                    android:background="@color/text_red"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_product_review"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_review"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/ub_shopping_shopping_detail_appraise"
                    android:textColor="@color/text_gray"
                    style="@style/text_font_size_m"/>

                <View
                    android:id="@+id/v_line_review"
                    android:layout_width="33dp"
                    android:layout_height="3dp"
                    android:background="@color/text_red"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_product_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_show_shop_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"
                />
            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_shop_cart"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/tv_cart_num"
                style="@style/bg_text_style"
                android:layout_alignRight="@+id/iv_cart"
                android:layout_alignEnd="@+id/iv_cart"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginStart="-15dp"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_add_shop_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/text_red_light"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ub_shopping_shopping_detail_add_shop_cart"
                android:textColor="@color/white"
                style="@style/text_font_size_m"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/text_red"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ub_shopping_shopping_detail_buy_now"
                android:textColor="@color/white"
                style="@style/text_font_size_m"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-120dp"
        android:gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@mipmap/top_icon"
           android:contentDescription="@string/app_name" />

    </LinearLayout>
</LinearLayout>