<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/iv_product_picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/img_defult" />

            <TextView
                style="@style/text_font_size_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="评分"
                android:textColor="@color/text_black" />

            <!-- <RatingBar
                 android:id="@+id/ratingBar"
                 style="@style/star_rating_bar_style"
                 android:layout_width="wrap_content"
                 android:layout_height="25dp"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="15dp"
                 android:isIndicator="true"
                 android:numStars="5"
                 android:rating="3" />-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/start_unselect2" />

                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/start_unselect2" />

                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/start_unselect2" />

                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/start_unselect2" />

                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/start_unselect2" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/line" />

        <EditText
            android:id="@+id/et_comment"
            style="@style/text_font_size_s"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:gravity="top"
            android:hint="你对这个商品有哪些满意或者不满意呢?快来评论晒单一起分享给小伙伴们吧~"
            android:paddingTop="10dp"
            android:textColorHint="@color/gray_light4"
            android:windowSoftInputMode="adjustResize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:clipChildren="false"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                style="@style/text_font_size_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="有图有真相，给小伙伴们晒一晒~"
                android:textColor="@color/text_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <youbao.shopping.ninetop.common.view.EvaluateView
                    android:id="@+id/evaluate_view"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:clipChildren="false"/>

                <youbao.shopping.ninetop.common.view.EvaluateView
                    android:id="@+id/evaluate_view2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:clipChildren="false"/>

                <youbao.shopping.ninetop.common.view.EvaluateView
                    android:id="@+id/evaluate_view3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:clipChildren="false"/>

                <youbao.shopping.ninetop.common.view.EvaluateView
                    android:id="@+id/evaluate_view4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:clipChildren="false"/>

                <youbao.shopping.ninetop.common.view.EvaluateView
                    android:id="@+id/evaluate_view5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:clipChildren="false"/>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/line" />
    </LinearLayout>

</LinearLayout>