<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        style="@style/title_height"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:src="@mipmap/back"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/add_address_save"
            android:textColor="@color/text_black"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_black"
            style="@style/text_font_size_m"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dip"
        >
        
        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:textColor="@color/text_black"
            style="@style/text_font_size_s"
            android:paddingLeft="15dip"
            android:gravity="center_vertical"
            android:hint="@string/add_address_consignee"
            android:textColorHint="@color/hint_color"
            android:maxLength="20"
            android:background="@null"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line"
            android:layout_marginLeft="15dip"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/user_number"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:textColor="@color/text_black"
            style="@style/text_font_size_s"
            android:paddingLeft="15dip"
            android:hint="@string/add_address_mobile"
            android:maxLength="11"
            android:inputType="phone"
            android:textColorHint="@color/hint_color"
            android:gravity="center_vertical"
            android:background="@null"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"
            android:layout_marginLeft="15dip"
            android:layout_marginStart="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <TextView
            android:id="@+id/user_address"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="50dip"
            android:textColor="@color/text_black"
            style="@style/text_font_size_s"
            android:paddingLeft="15dip"
            android:hint="@string/add_address_city"
            android:textColorHint="@color/hint_color"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_next_page"
                android:layout_marginRight="10dip"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line"
            android:layout_marginLeft="15dip"
            android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/user_address_details"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:textColor="@color/text_black"
                style="@style/text_font_size_s"
                android:paddingLeft="15dip"
                android:gravity="center_vertical"
                android:hint="@string/add_address_detail"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dip"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_bg"
                android:id="@+id/iv_select"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_address_default"
                android:layout_marginLeft="5dip"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>