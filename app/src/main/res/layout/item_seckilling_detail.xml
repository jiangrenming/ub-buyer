<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >
    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/demo_product_second"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日式多功能颈枕"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            style="@style/text_font_size_s"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:text="¥1"
            android:textColor="@color/text_red"
            style="@style/text_font_size_m"
            />
        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_gray"
            style="@style/text_font_size_ss"
            />
        <youbao.shopping.ninetop.common.view.ProgressBarView
            android:id="@+id/pbv_ratio"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_left_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/pbv_ratio"
            style="@style/text_font_size_sss"
            />

        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="87dp"
            android:layout_height="28dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="马上抢"
            android:textColor="@color/white"
            android:background="@color/text_yellow"
            />
    </RelativeLayout>
</LinearLayout>