<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="61dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxEms="3"
                android:ellipsize="end"
                style="@style/text_font_size_s"
                android:textColor="@color/text_black"
                />

            <ImageView
                android:id="@+id/iv_default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_name"
                android:src="@mipmap/default_text"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="18787878787"
                android:maxLength="11"
                style="@style/text_font_size_s"
                android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="浙江省 杭州市 拱墅区 祥符街道华盛达阅城22栋2单元302"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingTop="7dp"
                    style="@style/text_font_size_ss"
                    android:textColor="@color/gray_light5"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_address_edit"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:src="@mipmap/user_edit"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/iv_address_trash"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:src="@mipmap/trash"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>