<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ub_bg"
    android:orientation="vertical">

    <com.ninetop.common.view.HeadView
        android:id="@+id/hv_head"
        style="@style/title_height"
        android:layout_width="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:background="@color/text_black_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_edit_text_search2"
        android:hint="请输入兑换码"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="@color/gray_light8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        style="@style/text_font_size_m"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/text_red"
        android:text="确认兑换"
        android:textColor="@color/white" />


</LinearLayout>